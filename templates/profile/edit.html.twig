{% block body %}
  <div>
    <div class="row">
      {{ form_start(formProfile) }}
      <div class="p-5 py-5">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h4 class="text-right">
            Profile Edit
          </h4>
        </div>
        <div class="row mt-2">
          <div class="col-md-12">
            {{ form_widget(formProfile.userAvatar) }}
          </div>
        </div>
        <div class="row">
          <div class="col-md-4">
            <label class="labels">Full Name</label>
            {{ form_widget(formProfile.fullName) }}
          </div>
          <div class="col-md-4">
            <label class="labels">Username</label>
            <input type="text"
              class="form-control"
              name="username"
              value="{{ user.username }}" />
          </div>
          <div class="col-md-4">
            <label class="labels">Email Address</label>
            <input type="email"
              class="form-control"
              name="email"
              value="{{ user.email }}" />
          </div>
        </div>
        <div class="row mt-3">
          <div class="col-md-4">
            <label class="labels">Facebook</label>
            {{ form_widget(formProfile.facebookUrl) }}
          </div>
          <div class="col-md-4">
            <label class="labels">Twitter</label>
            {{ form_widget(formProfile.twitterUrl) }}
          </div>
          <div class="col-md-4">
            <label class="labels">Instagram</label>
            {{ form_widget(formProfile.instagramUrl) }}
          </div>
        </div>
        <div class="row mt-3">
          <div class="col-md-12">
            <label class="labels">About</label>
            {{ form_widget(formProfile.about) }}
          </div>
        </div>
        <div class="mt-5 text-center">
          {{ form_widget(formProfile.submit) }}
        </div>
      </div>
      {{ form_end(formProfile) }}
    </div>
  </div>
{% endblock %}
