{% extends 'base.html.twig' %}
{% block body %}
  <!-- Header -->
  <header class="bg-dark py-5">
    <div class="container px-5">
      <div class="row gx-5 align-items-center justify-content-center">
        <div class="col-lg-8 col-xl-7 col-xxl-6">
          <div class="my-5 text-center text-xl-start">
            <h1 class="display-5 fw-bolder text-white mb-2">
              Welcome to "BookStore.com"
            </h1>
            <p class="lead fw-normal text-white-50 mb-4">
              Discover the best books to read right now including trending
              titles, bookseller recommendations, new releases and more.
            </p>
            <div class="d-grid gap-3 d-sm-flex justify-content-sm-center justify-content-xl-start">
              <a class="btn btn-primary btn-lg px-4 me-sm-3" href="#features">
                Get Started
              </a>
              <a class="btn btn-outline-light btn-lg px-4"
                href="{{ path('about') }}">
                Learn More
              </a>
            </div>
          </div>
        </div>
        <div class="col-xl-5 col-xxl-6 d-none d-xl-block text-center">
          <img class="img-fluid rounded-3 my-5"
            src="{{ asset('images/store/book.jpg') }}"
            alt="books" />
        </div>
      </div>
    </div>
  </header>
  <!-- Features section -->
  <section class="py-5" id="features">
    <div class="container h-50">
      <div class="row align-middle">
        <div class="col-md-6 col-lg-3 column">
          <div class="card card-start gr-1">
            <div class="txt">
              <h1>
                PURCHASE BOOKS
              </h1>
              <p>
                Navigate to "BookList" search for your favorite books add them
                to your card and make your purchase , then you'll either have
                them delivered to you or pick them up from the store yourself.
              </p>
            </div>
            <a href="/BookList">more</a>
            <div class="ico-card">
              <i class="fa fa-rebel"></i>
            </div>
          </div>
        </div>
        <div class="col-md-6 col-lg-3 column">
          <div class="card card-start gr-2">
            <div class="txt">
              <h1>
                SELL BOOKS
              </h1>
              <p>
                Whether you’re a writer who wants to sell their own books or you
                want to sell other people's works. Navigate to "AddBook", enter
                your book description and it will be available for sell.
              </p>
            </div>
            <a href="/AddBook">more</a>
            <div class="ico-card">
              <i class="fa fa-rebel"></i>
            </div>
          </div>
        </div>
        <div class="col-md-6 col-lg-3 column">
          <div class="card card-start gr-3">
            <div class="txt">
              <h1>
                DISCUSS BOOKS
              </h1>
              <p>
                Just because you are stuck at home alone does not mean you can't
                discuss and debate books. navigate to your favorite book details
                screen and discuss it with other readers.
              </p>
            </div>
            <a href="/BookList">more</a>
            <div class="ico-card">
              <i class="fa fa-codepen"></i>
            </div>
          </div>
        </div>
        <div class="col-md-6 col-lg-3 column">
          <div class="card card-start gr-4">
            <div class="txt">
              <h1>
                CREATE BLOG POSTS
              </h1>
              <p>
                If you haven't already created a Blog Post connect to your
                account, navigate to "blog" then start the process by adding a
                title and proceed to add content and all other details related
                to the Post.
              </p>
            </div>
            <a href="/blog">more</a>
            <div class="ico-card">
              <i class="fa fa-empire"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- Carousel section -->
  <section class="py-5">
    <div id="carouselExampleIndicators"
      class="carousel slide"
      data-bs-ride="carousel">
      <div class="carousel-indicators">
        <button type="button"
          data-bs-target="#carouselExampleIndicators"
          data-bs-slide-to="0"
          class="active"
          aria-current="true"
          aria-label="Slide 1">

        </button>
        <button type="button"
          data-bs-target="#carouselExampleIndicators"
          data-bs-slide-to="1"
          aria-label="Slide 2">

        </button>
        <button type="button"
          data-bs-target="#carouselExampleIndicators"
          data-bs-slide-to="2"
          aria-label="Slide 3">

        </button>
      </div>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img src="{{ asset('images/store/slide1.jpg') }}"
            class="d-block w-100"
            alt="..." />
        </div>
        <div class="carousel-item">
          <img src="{{ asset('images/store/slide2.jpg') }}"
            class="d-block w-100"
            alt="..." />
        </div>
        <div class="carousel-item">
          <img src="{{ asset('images/store/slide3.jpg') }}"
            class="d-block w-100"
            alt="..." />
        </div>
      </div>
      <button class="carousel-control-prev"
        type="button"
        data-bs-target="#carouselExampleIndicators"
        data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next"
        type="button"
        data-bs-target="#carouselExampleIndicators"
        data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </section>
  <!-- Testimonial section -->
  <div class="py-5 bg-light">
    <div class="container px-5 my-5">
      <div class="row gx-5 justify-content-center">
        <div class="col-lg-10 col-xl-7">
          <div class="text-center">
            <div class="fs-4 mb-4 fst-italic">
              "Show me a family of readers, and I will show you the people who
              move the world."
            </div>
            <div class="d-flex align-items-center justify-content-center">
              <img class="rounded-circle me-3"
                src="https://dummyimage.com/40x40/ced4da/6c757d"
                alt="..." />
              <div class="fw-bold">
                Napoleon Bonaparte
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Blog preview section -->
  <section class="py-5">
    <div class="container px-5 my-5">
      <div class="row gx-5 justify-content-center">
        <div class="col-lg-8 col-xl-6">
          <div class="text-center">
            <h2 class="fw-bolder">
              From our blog
            </h2>
            <p class="lead fw-normal text-muted mb-5">
              Authors, readers, critics, media − and booksellers.
            </p>
          </div>
        </div>
      </div>
      <div class="row gx-5">
        {% for post in blog %}
          <div class="col-lg-4 mb-5">
            <a href="/blog/{{ post.id }}"
              class="text-decoration-none link-dark">
              <div class="card h-100 shadow border-0">
                <img class="card-img-top"
                  src="/images/blog/{{ post.imageName }}"
                  alt="post_image" />
                <div class="card-body p-4">
                  <div class="badge bg-primary bg-gradient rounded-pill mb-2">
                    News
                  </div>
                  <h5 class="card-title mb-3">
                    {{ post.title }}
                  </h5>
                  <p class="card-text mb-0">
                    {{ (post.content|slice(0, 180)) ~ '...' }}
                  </p>
                </div>
                <div class="card-footer p-4 pt-0 bg-transparent border-top-0">
                  <div class="d-flex align-items-end justify-content-between">
                    <div class="d-flex align-items-center">
                      <img class="rounded-circle me-3"
                        src="{{
                        post.user.profile.userAvatar
                          and post.user.profile.userAvatar.avatarName
                          ? '/images/userAvatar/'
                            ~ post.user.profile.userAvatar.avatarName
                          : '/images/store/avatar.jpg'
                        }}"
                        style="width: 50px; height: 50px; object-fit: cover;"
                        alt="user avatar" />
                      <div class="small">
                        <div class="fw-bold">
                          {{ post.user.username }}
                        </div>
                        <div class="text-muted">
                          {# March 12, 2021 &middot; 6 min read #}
                          {{ post.createdAt|date('F d, Y') }} &middot; 6 min read
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </a>
          </div>
        {% endfor %}
      </div>
    </div>
  </section>
{% endblock %}
